                                <RowDefinition Height="43*"/>
                            </Grid.RowDefinitions>

                            <Label Content="Планировка:" VerticalAlignment="Bottom" FontSize="14" Height="30" Grid.Row="0" />
                            <ComboBox Name="ComboBoxPropertyPlan" VerticalAlignment="Center" Height="35" Grid.Row="1"/>
