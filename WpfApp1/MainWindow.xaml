<Window Icon="C:\Users\КАТЯ\Desktop\5 семестр\Прога\house_home.ico"
        x:Class="WpfApp1.MainWindow"
        Background="#FFDCC3C3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Агентство недвижимости (REA)" Height="670" Width="1000" MinWidth="1000" MinHeight="670">
    <Grid>
        <TabControl Name="TabControl" Background="#FFDCC3C3" TabStripPlacement="Left" Margin="0" >

            <TabItem Background="#FFDCC3C3" Height="150">
                <TabItem.Header>
                    <Image  Source="/WpfApp1;component/Recources/h3.png" Stretch="Fill" Height="169" Width="158"/>
                </TabItem.Header>

                <Grid Background="#FFDCC3C3" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="277*"/>
                        <RowDefinition Height="26*"/>
                        <RowDefinition Height="333*"/>
                    </Grid.RowDefinitions>

                    <Label Content="Данное приложение ..." Foreground="#FF5F2323" FontSize="24" FontFamily="Malgun Gothic Semilight" FontWeight="Bold" Grid.Row="2"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="139*"/>
                            <ColumnDefinition Width="118*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="/WpfApp1;component/Recources/h4.png"  Grid.Column="1" Margin="0.2,0,0.2,-0.2"/>
                        <Label Content="Агентство &#xD;&#xA;недвижимости&#xD;&#xA;&quot;Авангард&quot;"  HorizontalAlignment="Center" VerticalAlignment="Center"  FontSize="36" Foreground="#FF5F2323" FontFamily="Malgun Gothic Semilight" Grid.Column="0" />
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Name="ClientsTab" Background="#FFDCC3C3" Header="Клиенты" FontFamily="Malgun Gothic Semilight" FontSize="30" Foreground="#FF5F2323" Height="60">
                <Grid Background="#FFDCC3C3" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="19*"/>
                        <RowDefinition Height="108*"/>
                    </Grid.RowDefinitions>

                    <DataGrid Name="dataGridClient" ItemsSource="{Binding Clients}" SelectedItem="{Binding SelectedClient}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" FontSize="12" Background="#FFE6E6D2"   Grid.Row="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id_Client}"/>
                            <DataGridTextColumn Header="ФИО" Binding="{Binding Client_Name}"/>
                            <DataGridTextColumn Header="Паспорт" Binding="{Binding Client_Passport}"/>
                            <DataGridTextColumn Header="ИНН" Binding="{Binding Client_INN}"/>
                            <DataGridTextColumn Header="БИК" Binding="{Binding Client_BIK}"/>
                            <DataGridTextColumn Header="СНИЛС" Binding="{Binding Client_SNILS}"/>
                            <DataGridTextColumn Header="Телефон" Binding="{Binding Client_Phone}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250*"/>
                            <ColumnDefinition Width="100*"/>
                            <ColumnDefinition Width="62*"/>
                            <ColumnDefinition Width="100*"/>
                            <ColumnDefinition Width="265*"/>
                        </Grid.ColumnDefinitions>
                        <Button Name="ButtonClientCreate" Command="{Binding AddCommand}" Content="Добавить" VerticalAlignment="Center" Height="40" FontSize="14" FontWeight="Bold" Foreground="#FFA51E1E" Grid.Column="1"/>
                        <Button Name="ButtonClientUpDate" Command="{Binding UpDateCommand}" Content="Изменить" VerticalAlignment="Center"  Height="40" FontSize="14" FontWeight="Bold" Foreground="#FFA51E1E" Grid.Column="3"/>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Name="PropertyTab" Background="#FFDCC3C3" Header="Недвижимость" FontFamily="Malgun Gothic Semilight" FontSize="30" FontWeight="Bold" Foreground="#FF5F2323" Height="60">
                <Grid Background="#FFDCC3C3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="137"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <DataGrid Name="dataGridProperty" ItemsSource="{Binding Propertys}" SelectedItem="{Binding SelectedProperty}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"  FontSize="12" Background="#FFE6E6D2" Grid.Row="1">
                    <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id_Property}"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding Pr_Cost}"/>
                            <DataGridTextColumn Header="Адрес" Binding="{Binding Pr_Address}"/>
                            <DataGridTextColumn Header="Метражность" Binding="{Binding Pr_Metric_area}"/>
                            <DataGridTextColumn Header="Этажность" Binding="{Binding Pr_Floor}"/>
                            <DataGridTextColumn Header="Участок" Binding="{Binding Pr_Plot_size}"/>
                            <DataGridTextColumn Header="Комнаты" Binding="{Binding Pr_Number_of_rooms}"/>


                            <DataGridTextColumn Width="*" Header="Клиент" Binding="{Binding Client.Client_Name}"/>
                            <DataGridTextColumn Width="*" Header="Вид недвижимости" Binding="{Binding Type_of_Property.TypeP_Name}"/>
                            <DataGridTextColumn Width="*" Header="Цель" Binding="{Binding Target.Target_Name}"/>
                            <DataGridTextColumn Width="*" Header="Район" Binding="{Binding Area.Area_Name}"/>
                            <DataGridTextColumn Width="*" Header="Сан. узел" Binding="{Binding Bathroom.Bathroom_Name}"/>
                            <DataGridTextColumn Width="*" Header="Планировка" Binding="{Binding Layout.Layout_Name}"/>
                            <DataGridTextColumn Width="*" Header="Материал" Binding="{Binding Material.Material_Name}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    

                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="82*"/>
                            <RowDefinition Height="55*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*"/>
                            <ColumnDefinition Width="90*"/>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="330*"/>
                            <ColumnDefinition Width="9*"/>
                            <ColumnDefinition Width="155*"/>
                            <ColumnDefinition Width="7*"/>
                            <ColumnDefinition Width="153*"/>
                            <ColumnDefinition Width="11*"/>
                        </Grid.ColumnDefinitions>

                        <Button Name="ButtonPropertyCreate" Command="{Binding AddCommand}" Content="Добавить" VerticalAlignment="Center" Height="40" FontSize="14" FontWeight="Bold" Foreground="#FFA51E1E" Grid.Column="1" Grid.Row="0" />
                        <Button Name="ButtonPropertyUpDate" Content="Изменить" VerticalAlignment="Center" Height="40" FontSize="14" FontWeight="Bold" Foreground="#FFA51E1E" Grid.Column="1" Grid.Row="1" />

                        <Grid Grid.Column="3" Grid.Row="0" Grid.ColumnSpan="2" Margin="0.4,0,8,54.8" Grid.RowSpan="2" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="165*"/>
                                <ColumnDefinition Width="10*"/>
                                <ColumnDefinition Width="156*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="38*"/>
                                <RowDefinition Height="43*"/>
                            </Grid.RowDefinitions>

                            <Label Content="Вид недвижимости:"  VerticalAlignment="Bottom" FontSize="14" Height="30" Grid.Row="0" Grid.Column="0" />
                            <ComboBox Name="ComboBoxPropertyType" ItemsSource="{Binding Tip}" SelectedItem ="{Binding SelectTip}" DisplayMemberPath="TypeP_Name" FontSize="14" VerticalAlignment="Center"  Height="35" Grid.Row="1" Grid.Column="0" />

                            <Label Content="Цель:" VerticalAlignment="Bottom" FontSize="14" Height="30" Grid.Row="0" Grid.Column="2" />
                            <ComboBox Name="ComboBoxPropertyTarget" ItemsSource="{Binding Tar}" SelectedItem ="{Binding SelectTar}" DisplayMemberPath="Target_Name" FontSize="14" VerticalAlignment="Center" Height="35" Grid.Row="1" Grid.Column="2"/>
                        </Grid>

                        <Grid Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="2" Margin="0.4,0.4,8,-0.2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="64*"/>
                                <ColumnDefinition Width="9*"/>
                                <ColumnDefinition Width="152*"/>
                                <ColumnDefinition Width="26*"/>
                                <ColumnDefinition Width="79*"/>
                            </Grid.ColumnDefinitions>

                            <Label Content="Район:" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="14" Height="30" Grid.Column="0" />
                            <ComboBox Name="ComboBoxPropertyRaion" ItemsSource="{Binding Ar}" SelectedItem ="{Binding SelectAr}" DisplayMemberPath="Area_Name" FontSize="14" VerticalAlignment="Center" Height="35" Grid.Column="2" />
                            <Label Content="Сан. узел:" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="14" Height="29" Grid.Column="4" />
                        </Grid>

                        <Grid Grid.Column="5" Grid.Row="0" Grid.ColumnSpan="2" Margin="1,0,6.4,54.8" Grid.RowSpan="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="38*"/>
                                <RowDefinition Height="43*"/>
                            </Grid.RowDefinitions>

                            <Label Content="Планировка:" VerticalAlignment="Bottom" FontSize="14" Height="30" Grid.Row="0" />
                            <ComboBox Name="ComboBoxPropertyPlan" ItemsSource="{Binding Lay}" SelectedItem ="{Binding SelectLay}" DisplayMemberPath="Layout_Name" FontSize="14" VerticalAlignment="Center" Height="35" Grid.Row="1"/>
                        </Grid>

                        <ComboBox Name="ComboBoxPropertyLay" ItemsSource="{Binding Bat}" SelectedItem ="{Binding SelectBat}" DisplayMemberPath="Bathroom_Name" FontSize="14" VerticalAlignment="Center"  Height="35" Grid.Column="5" Grid.Row="1" Grid.ColumnSpan="2" Margin="1,10.4,6.4,9.8"/>

                        <Grid Grid.Column="6" Grid.Row="1" Grid.ColumnSpan="2" Margin="6.8,0.4,0.2,-0.2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8*"/>
                                <ColumnDefinition Width="35*"/>
                                <ColumnDefinition Width="8*"/>
                            </Grid.ColumnDefinitions>
                            <Button Name="ButtonPropertyPoisk" Content="Поиск" VerticalAlignment="Center" Height="35" FontSize="14" FontWeight="Bold" Foreground="#FFA51E1E" Grid.Column="1" />
                        </Grid>

                        <Grid Grid.Column="6" Grid.Row="0" Grid.ColumnSpan="2" Margin="6.8,0,0.2,54.8" Grid.RowSpan="2" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="38*"/>
                                <RowDefinition Height="43*"/>
                            </Grid.RowDefinitions>
                            <Label Content="Материал:" VerticalAlignment="Bottom" FontSize="14" Height="30" Grid.Row="0"  />
                            <ComboBox ItemsSource="{Binding Mat}" SelectedItem ="{Binding SelectMat}" DisplayMemberPath="Material_Name" FontSize="14"  Name="ComboBoxPropertyMater" VerticalAlignment="Center" Height="35" Grid.Row="1"/>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Name="DealsTab" Background="#FFDCC3C3" Header="Сделки" FontFamily="Malgun Gothic Semilight" FontSize="30" FontWeight="Bold" Foreground="#FF5F2323" Height="60">
                <Grid Background="#FFDCC3C3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="19*"/>
                        <RowDefinition Height="108*"/>
                    </Grid.RowDefinitions>

                    <DataGrid Name="dataGridDeal" ItemsSource="{Binding Deals}" SelectedItem="{Binding SelectedDeal}"  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"  FontSize="12" Background="#FFE6E6D2" Grid.Row="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id_Deal}"/>
                            <DataGridTextColumn Header="Дата заключения" Binding="{Binding Deal_Date, StringFormat=dd.MM.yyyy}"/>
                            <DataGridTextColumn Header="Форма оплаты" Binding="{Binding Deal_Form_of_Payment}"/>
                            <DataGridTextColumn Header="Рассрочки" Binding="{Binding Deal_Mortgage_Period}"/>
                            <DataGridTextColumn Header="Платеж" Binding="{Binding Deal_Monthly_Payout}"/>
                            <DataGridTextColumn Header="Общая сумма" Binding="{Binding Deal_Total_Cost}"/>

                            <DataGridTextColumn Header="Продавец" Binding="{Binding Client.Client_Name}"/>
                            <DataGridTextColumn Header="Покупатель" Binding="{Binding Client.Client_Name}"/>
                            <DataGridTextColumn Header="Недвижимость" Binding="{Binding Property.Pr_Address}"/>
                            <DataGridTextColumn Header="Агент" Binding="{Binding Agent.Agent_Name}"/>

                            <DataGridTextColumn Header="Доля агента" Binding="{Binding Deal_AgentShare_Cost}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250*"/>
                            <ColumnDefinition Width="100*"/>
                            <ColumnDefinition Width="62*"/>
                            <ColumnDefinition Width="100*"/>
                            <ColumnDefinition Width="265*"/>
                        </Grid.ColumnDefinitions>
                        <Button Name="ButtonDealCreate" Command="{Binding AddCommand}" Content="Сделка" VerticalAlignment="Center" Height="40" FontSize="14" FontWeight="Bold" Foreground="#FFA51E1E" Grid.Column="1"/>
                        <Button Name="ButtonDealDelete" Content="Удалить" VerticalAlignment="Center" Height="40" FontSize="14" FontWeight="Bold" Foreground="#FFA51E1E" Grid.Column="3"/>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Name="DocumentTab" Background="#FFDCC3C3" Header="Договора" FontFamily="Malgun Gothic Semilight" FontSize="30" FontWeight="Bold" Foreground="#FF5F2323" Height="60">
                <Grid Background="#FFDCC3C3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="19*"/>
                        <RowDefinition Height="108*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="158*"/>
                            <ColumnDefinition Width="20*"/>
                            <ColumnDefinition Width="414*"/>
                            <ColumnDefinition Width="23*"/>
                            <ColumnDefinition Width="136*"/>
                            <ColumnDefinition Width="20*"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="Адрес недвижимости&#xD;&#xA;из сделки:" VerticalAlignment="Center" FontSize="14" FontWeight="Bold" Grid.Column="0"/>
                        <ComboBox Name="ComboBoxProperty" ItemsSource="{Binding Prop}" SelectedItem ="{Binding SelectProp}" DisplayMemberPath="Pr_Address" FontSize="14" VerticalAlignment="Center" Height="50" Grid.Column="2"/>

                        <Button Name="ButtonDocumentSave" Content="Создать и сохранить &#xD;&#xA;            договор" VerticalAlignment="Center" Height="60" FontSize="14" FontWeight="Bold" Foreground="#FFA51E1E" Grid.Column="4"/>
                    </Grid>

                    <DataGrid Name="dataGridDocument" Background="#FFE6E6D2" Grid.Row="1"/>
                </Grid>
            </TabItem>

            <TabItem Name="OtchetAgencyTab" Background="#FFDCC3C3" Header="Отчет об&#xD;&#xA;агентстве" FontFamily="Malgun Gothic Semilight" FontSize="30" FontWeight="Bold" Foreground="#FF5F2323">
                <Grid Background="#FFDCC3C3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="19*"/>
                        <RowDefinition Height="108*"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="dataGridOtchet1" Background="#FFE6E6D2" Grid.Row="1" FontSize="14" ItemsSource="{Binding otchet1s}"  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id_Deal}"/>
                            <DataGridTextColumn Header="Дата сделки" Binding="{Binding Deal_Date, StringFormat=dd.MM.yyyy}"/>
                            <DataGridTextColumn Header="Недвижимость" Binding="{Binding Pr_Address}"/>
                            <DataGridTextColumn Header="ФИО Клиента" Binding="{Binding Client_Name}"/>
                            <DataGridTextColumn Header="ФИО Агента" Binding="{Binding Agent_Name}"/>
                            <DataGridTextColumn Header="Общая сумма сделки" Binding="{Binding Deal_Total_Cost}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="31*"/>
                            <ColumnDefinition Width="38*"/>
                            <ColumnDefinition Width="213*"/>
                            <ColumnDefinition Width="50*"/>
                            <ColumnDefinition Width="41*"/>
                            <ColumnDefinition Width="222*"/>
                            <ColumnDefinition Width="41*"/>
                            <ColumnDefinition Width="95*"/>
                            <ColumnDefinition Width="41*"/>
                        </Grid.ColumnDefinitions>

                        <DatePicker Name="DatePicker1" SelectedDate="{Binding datePicker1}" Height="35" FontSize="18" Grid.Column="2"/>
                        <Label Content="С:" Height="35" FontSize="18" Grid.Column="1"/>
                        <DatePicker Name="DatePicker2" SelectedDate="{Binding datePicker2}" Height="35" FontSize="18" Grid.Column="5"/>
                        <Label Content="ПО:" Height="35" FontSize="18" Grid.Column="4"/>
                        <Button Name="ButtonOtchet1OK" Content="ОК" Command="{Binding Otchet1Command}" VerticalAlignment="Center" Height="40" FontSize="14" FontWeight="Bold" Foreground="#FFA51E1E" Grid.Column="7" />
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Name="OtchetAgentTab" Background="#FFDCC3C3" Header="Отчет по&#xD;&#xA;агентам" FontFamily="Malgun Gothic Semilight" FontSize="30" FontWeight="Bold" Foreground="#FF5F2323">
                <Grid Background="#FFDCC3C3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="19*"/>
                        <RowDefinition Height="108*"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="dataGridOtchet2" Background="#FFE6E6D2" Grid.Row="1" FontSize="14" ItemsSource="{Binding otchet2s}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id_Deal}"/>
                            <DataGridTextColumn Header="Дата сделки" Binding="{Binding Deal_Date, StringFormat=dd.MM.yyyy}"/>
                            <DataGridTextColumn Header="Недвижимость" Binding="{Binding Pr_Address}"/>
                            <DataGridTextColumn Header="Телефон Клиента" Binding="{Binding Client_Phone}"/>
                            <DataGridTextColumn Header="ФИО Клиента" Binding="{Binding Client_Name}"/>
                            <DataGridTextColumn Header="Общая сумма сделки" Binding="{Binding Deal_Total_Cost}"/>
                            <DataGridTextColumn Header="Для агента от сделки" Binding="{Binding Deal_AgentShare_Cost}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="16*"/>
                            <ColumnDefinition Width="40*"/>
                            <ColumnDefinition Width="221*"/>
                            <ColumnDefinition Width="27*"/>
                            <ColumnDefinition Width="307*"/>
                            <ColumnDefinition Width="36*"/>
                            <ColumnDefinition Width="89*"/>
                            <ColumnDefinition Width="35*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="48*"/>
                                <RowDefinition Height="47*"/>
                            </Grid.RowDefinitions>
                            <Label Content="С:" VerticalAlignment="Center" Height="35" FontSize="18" Grid.Row="0"/>
                            <Label Content="ПО:" VerticalAlignment="Center" Height="35" FontSize="18" Grid.Row="1"/>
                        </Grid>

                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="48*"/>
                                <RowDefinition Height="47*"/>
                            </Grid.RowDefinitions>
                            <DatePicker Name="DateAgent1" SelectedDate="{Binding dateAgent1}" VerticalAlignment="Center" Height="35" FontSize="18" Grid.Row="0"/>
                            <DatePicker Name="DateAgent2" SelectedDate="{Binding dateAgent2}" VerticalAlignment="Center" Height="35" FontSize="18" Grid.Row="1"/>
                        </Grid>

                        <Grid Grid.Column="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="48*"/>
                                <RowDefinition Height="47*"/>
                            </Grid.RowDefinitions>
                            <ComboBox Name="ComboBoxAgName" ItemsSource="{Binding Agg}" SelectedItem ="{Binding SelectAgg}" SelectedIndex="{Binding comboBoxAgName}" DisplayMemberPath="Agent_Name" FontSize="14" VerticalAlignment="Center" Height="40" Grid.Row="1"/>
                            <Label Content="ФИО Агента:" VerticalAlignment="Bottom" Height="35" FontSize="18" Grid.Row="0"/>
                        </Grid>
                        <Button Name="ButtonOtchet2OK"  Command="{Binding Otchet2Command}"  Content="ОК" VerticalAlignment="Center" Height="40" FontSize="14" FontWeight="Bold" Foreground="#FFA51E1E" Grid.Column="6"/>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Background="#FFDCC3C3" Header="Справка" FontFamily="Malgun Gothic Semilight" FontSize="30" FontWeight="Bold" Foreground="#FF5F2323 " Height="60">
                <Grid Background="#FFDCC3C3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="122*"/>
                        <ColumnDefinition Width="71*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="!.png" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1"/>
                    <Label Content="Приложение разработано&#xD;&#xA; в рамках курсовой &#xD;&#xA;работы по дисциплине: &#xA;''Конструирование &#xD;&#xA;Программного &#xA;Обеспечения'' &#xD;&#xA;студенткой гр.3-42В &#xD;&#xA;ИГЭУ им. Ленина &#xA;Кавериной Е.В., &#xD;&#xA;Иваново 2019" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF5F2323" Grid.Column="0"/>
                </Grid>
            </TabItem>
        </TabControl>


    </Grid>
</Window>
